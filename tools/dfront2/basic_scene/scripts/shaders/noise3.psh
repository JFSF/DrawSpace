

sampler1D TextureGrad : register(s0);
sampler2D TexturePerm : register(s1);

struct PS_INTPUT 
{
	float4 Position : POSITION0;
	float4 TexCoord0: TEXCOORD0;
	float4 TexCoord1: TEXCOORD1;
};



float4 ps_main( PS_INTPUT input ) : COLOR0
{
	float4 color = 0;
	
	double3 f = 0.0;
	

	f[0] = lerp( 0.5, 0.85, input.TexCoord0.x );
	f[1] = lerp( 0.5, 0.85, input.TexCoord0.y );
	f[2] = 1.0;
	
	float4 res = tex1Dlod( TextureGrad, 0.0 );

	
	if( res.z == 3.0 )
	{
		color.x = 0.999;
	}

	return color;
}
